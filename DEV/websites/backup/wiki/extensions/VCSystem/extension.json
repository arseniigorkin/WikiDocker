{
  "name": "VCSystem",
  "author": [
    "Arsenii Gorkin gorkin@protonmail.com"
  ],
  "version": "0.1.rev.0",
  "url": "",
  "descriptionmsg": "vcsystem-desc",
  "license-name": "GPL-2.0-or-later",
  "type": "other",
  "requires": {
    "MediaWiki": ">= 1.39.0"
  },
  "MessagesDirs": {
    "VCSystem": [
      "i18n"
    ]
  },
  "config": {
    "vcsPrefix": {
      "value": "vcsystem_",
      "description": "vcsystem-config-prefix-description"
    }
  },
  "SpecialPages": {
    "VCSystemSettings": {
      "class": "VCSystem\\SpecialVCSystemSettings"
    },
    "VCSystemBranches": {
      "class": "VCSystem\\SpecialVCSystemBranchManagement"
    }
  },
  "ExtensionMessagesFiles": {
    "VCSystemAliases": "VCSystem.Aliases.php"
  },
  "UserGroupPermissions": {
    "vcsadmin": {
      "vcs-merge-versions-permission": true,
      "vcs-manage-branches-permission": true
    }
  },
  "AddGroups": {
    "bureaucrat": ["vcsadmin"],
    "sysop": ["vcsadmin"]
  },
  "RemoveGroups": {
    "bureaucrat": ["vcsadmin"],
    "sysop": ["vcsadmin"]
  },
  "AutoloadClasses": {
    "VCSystem\\VCSystemMain": "includes/VCSystemMain.php",
    "VCSystem\\Maintenance\\InitVcsystemMainTableAndMasterBranch": "includes/maintenance/InitVcsystemMainTableAndMasterBranch.php",
    "VCSystem\\SpecialVCSystemSettings": "includes/SpecialVCSystemSettings.php",
    "VCSystem\\SpecialVCSystemBranchManagement": "includes/SpecialVCSystemBranchManagement.php",
    "VCSystem\\hooks\\ParserAfterTidyHook": "includes/hooks/ParserAfterTidyHook.php",
    "VCSystem\\hooks\\SkinTemplateNavigationHook": "includes/hooks/SkinTemplateNavigationHook.php",
    "VCSystem\\hooks\\SkinAfterPortletHook": "includes/hooks/SkinAfterPortletHook.php",
    "VCSystem\\hooks\\PageSaveCompleteHook": "includes/hooks/PageSaveCompleteHook.php",
    "VCSystem\\hooks\\ArticleViewHeaderHook": "includes/hooks/ArticleViewHeaderHook.php",
    "VCSystem\\hooks\\MultiContentSaveHook": "includes/hooks/MultiContentSaveHook.php",
    "VCSystem\\hooks\\FileUploadHook": "includes/hooks/FileUploadHook.php",
