    "VCSystem\\api\\ApiGetBranches": "includes/api/ApiGetBranches.php",
    "VCSystem\\hooks\\LoadExtensionSchemaUpdatesHook": "includes/hooks/LoadExtensionSchemaUpdatesHook.php",
    "VCSystem\\hooks\\models\\UpdateRevisionForFileOnPageContentChangeModel": "includes/hooks/models/UpdateRevisionForFileOnPageContentChangeModel.php"
  },
  "APIModules": {
    "createbranch": "VCSystem\\api\\ApiCreateBranch",
    "getbranches": "VCSystem\\api\\ApiGetBranches"
  },
  "Hooks": {
    "UserGetDefaultGroups": "VCSystem\\VCSystemMain::onUserGetDefaultGroups",
    "MediaWikiServices": "VCSystem\\VCSystemMain::onMediaWikiServices",
    "BeforePageDisplay": "VCSystem\\VCSystemMain::onBeforePageDisplay",
