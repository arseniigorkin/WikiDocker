    "PageSaveComplete": "VCSystem\\hooks\\PageSaveCompleteHook::onPageSaveComplete",
    "MultiContentSave": "VCSystem\\hooks\\MultiContentSaveHook::onMultiContentSave",
    "FileUpload": "VCSystem\\hooks\\FileUploadHook::onFileUpload",
    "UploadVerifyFile": "VCSystem\\hooks\\UploadVerifyFileHook::onUploadVerifyFile",
    "RecentChange_save": "VCSystem\\hooks\\RecentChange_saveHook::onRecentChange_save",
