  },
  "HookHandlers": {
    "handleLoadExtensionSchemaUpdates": {
      "class": "VCSystem\\hooks\\LoadExtensionSchemaUpdatesHook"
    }
  },
  "ResourceModules": {
    "ext.VCSystem": {
      "scripts": [
